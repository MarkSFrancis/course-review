rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /resources/{resourceId} {
      allow read;
      allow write: if request.auth.id == request.resource.data.createdBy.uid;

      match /reviews/{reviewId} {
        allow read;
        allow write: if request.auth.id == request.resource.data.createdBy.uid;
      }
    }
  }
}